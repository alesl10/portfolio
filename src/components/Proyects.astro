        image: "../pr4.jpg",
        tecno: [
            { icon: "../icons/html-5-svgrepo-com.svg" },
            { icon: "../icons/css-3-svgrepo-com.svg" },
            { icon: "../icons/javascript-svgrepo-com.svg" },
            { icon: "../icons/github-color-svgrepo-com.svg" },
        ],
